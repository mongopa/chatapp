<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="xyz.mongop.chatapp.activities.CreateAccountActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="310dp"
        android:background="@color/colorAccent"
        android:layout_centerInParent="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/chat_icon"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:text="@string/create_account"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingEnd="30dp"
            android:paddingStart="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/accountDisplayNameEt"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="Display Name"
                android:textSize="14sp"
                android:inputType="textPersonName"
                android:paddingBottom="10dp"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textColor="#f0f7f4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/accountEmailEt"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="Enter Email"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                android:paddingBottom="10dp"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textColor="#f0f7f4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/accountPasswordEt"
                android:background="@drawable/selector_bg_edit_2"
                android:hint="Password"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                android:textColor="#f0f7f4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/accountCreateActBtn"
                    android:background="@drawable/bt_shape"
                    android:text="@string/create_account"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:textColor="#d3d3d3"
                    android:layout_width="150dp"
                    android:layout_height="50dp" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>





</RelativeLayout>
